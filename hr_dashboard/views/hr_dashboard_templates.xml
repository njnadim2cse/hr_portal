<odoo>
    <!-- Attendance Template -->
    <template id="attendance_template">
        <t t-call="web.layout">
            <div class="oe_structure container mt-4">
                <h1>Attendance Dashboard</h1>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Worked Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="attendances" t-as="att">
                            <tr>
                                <td><t t-esc="att['date']"/></td>
                                <td><t t-esc="att['status']"/></td>
                                <td><t t-esc="att['check_in']"/></td>
                                <td><t t-esc="att['check_out']"/></td>
                                <td><t t-esc="att['worked_hours']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <!-- Summary Template -->
    <template id="summary_template">
        <t t-call="web.layout">
            <div class="oe_structure container mt-4">
                <h1>Monthly Attendance Summary</h1>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Present Days</th>
                            <th>Late Days</th>
                            <th>Absent Days</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><t t-esc="summary['month']"/></td>
                            <td><t t-esc="summary['present']"/></td>
                            <td><t t-esc="summary['late_days']"/></td>
                            <td><t t-esc="summary['absent']"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
