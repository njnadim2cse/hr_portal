<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <template id="products_discounted" name="Discounted Products">
            <t t-call="website.layout">
                <div id="wrap" class="o_wsale_products_page">
                    <div class="container">
                        <div class="text-center mb-4">
                            <h2>Exclusive Discounted Products</h2>
                        </div>
                        <div class="row">
                            <t t-if="products">
                                <t t-foreach="products" t-as="product">
                                    <div class="col-lg-4 col-md-6 mb-3">
                                        <div class="card shadow-sm h-100">
                                            <img t-att-src="'/web/image/product.template/' + str(product.id) + '/image_1920'" 
                                                class="card-img-top" alt="Product Image"/>
                                            <div class="card-body text-center">
                                                <h5 class="card-title"><t t-esc="product.name"/></h5>
                                                <p class="card-text">
                                                    <t t-esc="product.list_price"/> tk
                                                </p>
                                                <a t-att-href="'/shop/product/' + str(product.id)" 
                                                class="btn btn-primary">
                                                    View Product
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="">
                                <div class="col-12 text-center">
                                    <h3>No discounted products available</h3>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>   
    
    </data>
</odoo>
